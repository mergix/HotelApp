@model User

<form method="post" asp-action="DeleteUserPost">
    <input asp-for="UserId" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Delete Customer</h2>
            <hr/>
        </div>
        @* <div asp-validation-summary="All"></div> *@
         <div class="mb-3">
                    <label asp-for="UserName"></label>
                    <input asp-for="UserName" disabled class="form-control"/>
                    
                </div>
                <div class="mb-3">
                    <label asp-for="UserEmail"></label>
                    <input asp-for="UserEmail" disabled class="form-control"/>
                   
                </div>
                <div class="mb-3">
                    <label asp-for="UserAddress"></label>
                    <input asp-for="UserAddress" disabled class="form-control"/>
                   
                </div>
                <div class="mb-3">
                    <label asp-for="UserPassword"></label>
                    <input asp-for="UserPassword" disabled class="form-control"/>
                    
                </div>
                <div class="mb-3">
                    <label asp-for="UserGender"></label>
                    <input asp-for="UserGender" disabled class="form-control"/>
                    
                </div>
                <div class="mb-3">
                    <label asp-for="DateJoined"></label>
                    <input asp-for="DateJoined" disabled class="form-control"/>
                    
                </div>

        <button type="submit" class="btn btn-danger" style="width: 150px">Delete</button>
        <a asp-controller="Admin" asp-action="User" class=" btn btn-secondary" style="width:150px "> Back to List</a>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
    
}