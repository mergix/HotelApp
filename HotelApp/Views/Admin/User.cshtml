@model  IEnumerable<User>
@{
    ViewBag.Title = "index";
    
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> User List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Admin" asp-action="CreateUser" class="btn btn-primary">
                Create a new User 
            </a>
        </div>
    </div>


    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
        <tr>
            <th>
                UserName
            </th>
            <th>
               UserEmail
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td style="width: 50%">
                    @obj.UserName
                </td>
                <td style="width: 30%">
                    @obj.UserEmail
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Admin" asp-action="EditUser"  asp-route-id="@obj.UserId"
                           class="btn btn-primary mx-2">  Edit</a>
                        <a asp-controller="Admin" asp-action="DeleteUser" asp-route-id="@obj.UserId"
                           class="btn btn-danger mx-2"> Delete</a>
                        
                    
                    </div>
                </td>
            
            </tr>
        }
        </tbody>
    </table>
</div>