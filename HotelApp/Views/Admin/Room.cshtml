@model  IEnumerable<Room>
@{
    ViewBag.Title = "Room";
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Room List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Admin" asp-action="CreateRoom" class="btn btn-primary"><i class="bi bi-plus-lg"></i>
                New Room
            </a>
        </div>
    </div>


    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
        <tr>
            <th>
                Room Name
            </th>
            <th>
                Room Cost
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td style="width: 50%">
                    @obj.RName
                </td>
                <td style="width: 30%">
                    @obj.RCost
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Admin" asp-action="EditRoom"  asp-route-id="@obj.RId"
                           class="btn btn-primary mx-2"> Edit</a>
                        <a asp-controller="Admin" asp-action="DeleteRoom" asp-route-id="@obj.RId"
                           class="btn btn-danger mx-2"> Delete</a>
                        @* <a asp-controller="User" asp-action="Login"  *@
                        @*    class="btn btn-primary mx-2"> Login</a> *@
                    
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>