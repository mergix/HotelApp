@model  IEnumerable<Customer>
@{
    ViewBag.Title = "index";
    
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Customer List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Customer" asp-action="Create" class="btn btn-primary">
                Create a new Customer Entry
            </a>
        </div>
    </div>


    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
        <tr>
            <th>
                Customer Name
            </th>
            <th>
                Customer Email
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td style="width: 50%">
                    @obj.CustomerName
                </td>
                <td style="width: 30%">
                    @obj.CustomerEmail
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Customer" asp-action="Edit"  asp-route-id="@obj.CustomerId"
                           class="btn btn-primary mx-2">  Edit</a>
                        <a asp-controller="Customer" asp-action="Delete" asp-route-id="@obj.CustomerId"
                           class="btn btn-danger mx-2"> Delete</a>
                    
                    </div>
                </td>
            
            </tr>
        }
        </tbody>
    </table>
</div>