@model Customer

<form method="post" asp-action="DeletePost">
    <input asp-for="CustomerId" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Edit Customer</h2>
            <hr/>
        </div>
        @* <div asp-validation-summary="All"></div> *@
        <div class="mb-3">
            <label asp-for="CustomerName"></label>
            <input asp-for="CustomerName" disabled class="form-control"/>

        </div>
        <div class="mb-3">
            <label asp-for="CustomerEmail"></label>
            <input asp-for="CustomerEmail" disabled class="form-control"/>

        </div>
        <div class="mb-3">
            <label asp-for="CustomerAddress"></label>
            <input asp-for="CustomerAddress" disabled class="form-control"/>

        </div>
        <div class="mb-3">
            <label asp-for="CustomerPassword"></label>
            <input asp-for="CustomerPassword" disabled class="form-control"/>

        </div>

        <button type="submit" class="btn btn-danger" style="width: 150px">Delete</button>
        <a asp-controller="Customer" asp-action="Index" class=" btn btn-secondary" style="width:150px "> Back to List</a>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
    
}