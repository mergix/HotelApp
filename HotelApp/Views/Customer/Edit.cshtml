@model Customer

<form method="post" asp-action="Edit">
    <div class = "border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Edit Customer</h2>
            <hr/>
        </div>
        @* <div asp-validation-summary="All"></div> *@
        <div class="mb-3">
            <label asp-for="CustomerName"></label>
            <input asp-for="CustomerName" class="form-control"/>
            <span asp-validation-for="CustomerName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="CustomerEmail"></label>
            <input asp-for="CustomerEmail" class="form-control"/>
            <span asp-validation-for="CustomerEmail" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="CustomerAddress"></label>
            <input asp-for="CustomerAddress" class="form-control"/>
            <span asp-validation-for="CustomerAddress" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="CustomerPassword"></label>
            <input asp-for="CustomerPassword" class="form-control"/>
            <span asp-validation-for="CustomerPassword" class="text-danger"></span>
        </div>
        
        <button type="submit" class="btn btn-danger" style="width: 150px">Edit</button>
        <a asp-controller="Customer" asp-action="Index" class=" btn btn-secondary" style="width:150px "> Back to List</a>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
    
}